<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="app.com.tony.divider.MainActivity"
    android:rowCount="17"
    android:columnCount="5"
    style="@style/Animation.AppCompat.Dialog">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:text="Reset"
        android:id="@+id/button"
        android:layout_row="0"
        android:layout_column="2"
        android:nestedScrollingEnabled="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="       Enter Valid Info"
        android:id="@+id/textView3"
        android:layout_row="1"
        android:layout_column="0"

        android:textIsSelectable="false"
        android:textColor="#ce0707"
        android:textSize="13dp"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="please."
        android:id="@+id/textView4"
        android:layout_row="1"
        android:layout_column="1"
        android:textColor="#ce0707"
        android:textSize="13dp"
        android:textStyle="bold|italic" />

    <Space
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:layout_row="1"
        android:layout_column="2" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_row="2"
        android:layout_column="1"
        android:src="@drawable/black"
        android:background="@drawable/black"
        android:adjustViewBounds="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Bussers:"
        android:id="@+id/textView"
        android:layout_row="2"
        android:layout_column="2"
        android:textStyle="italic"
        android:textColor="#020101" />

    <Spinner
        android:layout_width="83dp"
        android:layout_height="50dp"
        android:id="@+id/spinner"
        android:layout_row="2"
        android:layout_column="3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Percentage"
        android:id="@+id/textView5"
        android:layout_row="3"
        android:layout_column="0"
        android:textColor="#4907ce"
        android:textStyle="bold|italic" />

    <Spinner
        android:layout_width="96dp"
        android:layout_height="52dp"
        android:id="@+id/spinner3"
        android:layout_row="4"
        android:layout_column="0" />

    <ImageButton
        android:layout_width="62dp"
        android:layout_height="58dp"
        android:id="@+id/imageButton2"
        android:layout_row="4"
        android:layout_column="1"
        android:background="@drawable/black2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Runners:"
        android:id="@+id/textView2"
        android:layout_row="4"
        android:layout_column="2"
        android:textStyle="italic"
        android:textColor="#000000" />

    <Spinner
        android:layout_width="83dp"
        android:layout_height="50dp"
        android:id="@+id/spinner2"
        android:layout_row="4"
        android:layout_column="3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="    Enter Total Tips:"
        android:id="@+id/textView6"
        android:layout_row="0"
        android:layout_column="0"
        android:textStyle="bold|italic"
        android:textColor="@android:color/holo_green_dark" />

    <EditText
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextA"
        android:layout_row="0"
        android:hint=" $$$$"
        android:layout_column="1" />

    <Space
        android:layout_width="60dp"
        android:layout_height="28dp"
        android:layout_row="5"
        android:layout_column="3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="   Percentage Fee:"
        android:id="@+id/textView8"
        android:layout_row="6"
        android:layout_column="0"
        android:textStyle="bold|italic"
        android:textColor="#e71e10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textViewB"
        android:layout_gravity="fill_horizontal"
        android:gravity="center"
        android:layout_column="1"
        android:background="#177fa87f"
        android:layout_row="6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="  per Busser"
        android:id="@+id/textView10"
        android:layout_row="6"
        android:layout_column="2"
        android:textStyle="italic" />

    <Space
        android:layout_width="60dp"
        android:layout_height="28dp"
        android:layout_row="7"
        android:layout_column="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Each Busser gets:"
        android:id="@+id/textView11"
        android:layout_row="8"
        android:layout_column="0"
        android:textStyle="bold|italic"
        android:textColor="#e71e10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textViewC"
        android:layout_gravity="fill_horizontal"
        android:gravity="center"
        android:layout_column="1"
        android:background="#177fa87f"
        android:layout_row="8" />

    <Space
        android:layout_width="60dp"
        android:layout_height="28dp"
        android:layout_row="8"
        android:layout_column="2" />

    <Space
        android:layout_width="60dp"
        android:layout_height="17dp"
        android:layout_row="9"
        android:layout_column="3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Each Runner gets:"
        android:id="@+id/textView12"
        android:layout_row="10"
        android:layout_column="0"
        android:textStyle="bold|italic"
        android:textColor="#e71e10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textViewD"
        android:layout_gravity="fill_horizontal"
        android:gravity="center"
        android:layout_column="1"
        android:background="#177fa87f"
        android:layout_row="10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/copyright"
        android:id="@+id/textView15"
        android:layout_row="16"
        android:layout_column="0" />

    <TextView
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:text="Productions"
        android:id="@+id/textView16"
        android:layout_row="16"
        android:layout_column="1" />


</GridLayout>
